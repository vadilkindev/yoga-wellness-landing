---
import Container from '../layout/Container.astro';
import SectionWrapper from '../layout/SectionWrapper.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import Card from '../ui/Card.astro';
import Badge from '../ui/Badge.astro';
import productsData from '../../data/products.json';

const products = productsData.slice(0, 3);
---

<SectionWrapper id="products-preview" bg="white">
  <Container>
    <div class="blog-header">
      <SectionTitle 
        title="Productos Destacados" 
        subtitle="Nuestro CatÃ¡logo"
        alignment="left"
      />
      <a href="/productos" class="view-all">Ver todos los productos &rarr;</a>
    </div>

    <div class="blog-grid">
      {products.map(product => (
        <Card interactive class="blog-card">
          {product.images && product.images[0] ? (
            <img src={product.images[0]} alt={product.name} class="blog-image" />
          ) : (
            <div class="blog-image-placeholder bg-muted"></div>
          )}
          <div class="blog-content">
            <div class="blog-meta">
              {product.tags && product.tags.length > 0 ? (
                <Badge label={product.tags[0]} />
              ) : (
                <div></div>
              )}
              <span class="blog-date">{product.variants && product.variants[0] ? product.variants[0].size : ''}</span>
            </div>
            <h3 class="blog-title">
              <a href={`/productos/${product.id}`}>{product.name}</a>
            </h3>
            <p class="blog-excerpt">{product.subtitle}</p>
          </div>
        </Card>
      ))}
    </div>
  </Container>
</SectionWrapper>

<style>
  .blog-header {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-xl);
    gap: var(--space-md);
  }

  @media (min-width: 768px) {
    .blog-header {
      flex-direction: row;
      align-items: flex-end;
    }
  }

  .view-all {
    font-family: var(--font-body);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    transition: color 0.3s ease;
  }

  .view-all:hover {
    color: var(--color-text-primary);
  }

  .blog-grid {
    display: grid;
    gap: var(--space-xl);
    grid-template-columns: 1fr;
  }

  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .blog-card {
    padding: 0;
    overflow: hidden;
  }

  .blog-image-placeholder {
    width: 100%;
    aspect-ratio: 16/9;
    border-bottom: 1px solid var(--color-border);
  }

  .blog-image {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    border-bottom: 1px solid var(--color-border);
  }
  
  .bg-primary { background-color: var(--color-primary); opacity: 0.8; }
  .bg-secondary { background-color: var(--color-secondary); }
  .bg-muted { background-color: var(--color-border); }

  .blog-content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  .blog-meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .blog-date {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
  }

  .blog-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    line-height: 1.3;
    margin-bottom: var(--space-sm);
  }

  .blog-title a {
    transition: color 0.3s ease;
  }

  .blog-title a:hover {
    color: var(--color-primary);
  }

  .blog-excerpt {
    color: var(--color-text-secondary);
    font-size: var(--text-sm);
    margin-top: auto;
  }
</style>
