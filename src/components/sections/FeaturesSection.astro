---
import { FEATURES } from '../../constants';
import Container from '../layout/Container.astro';
import SectionWrapper from '../layout/SectionWrapper.astro';
import IconWrapper from '../ui/IconWrapper.astro';
---

<SectionWrapper id="features" bg="primary">
  <Container>
    <div class="features-header">
      <h2 class="features-title">El viaje se trata de descubrir "cómo" — cómo aprender. El verdadero viaje es descubrirte a vos misma.</h2>
    </div>

    <div class="features-grid">
      {FEATURES.map((feature, index) => (
        <div class="feature-item">
          <IconWrapper size="md" class="feature-icon">
            {index + 1}
          </IconWrapper>
          <h3 class="item-title">{feature.title}</h3>
          <p class="item-description">{feature.description}</p>
        </div>
      ))}
    </div>
  </Container>
</SectionWrapper>

<style>
  .features-header {
    text-align: center;
    max-width: 900px;
    margin-inline: auto;
    margin-bottom: var(--space-3xl);
  }

  .features-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-style: italic;
    line-height: 1.3;
    color: var(--color-bg);
  }

  .features-grid {
    display: grid;
    gap: var(--space-2xl);
    grid-template-columns: 1fr;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: var(--space-2xl);
  }

  @media (min-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(3, 1fr);
      text-align: center;
    }
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
  }

  .feature-icon {
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.5);
    color: var(--color-bg);
    margin-bottom: var(--space-lg);
    font-family: var(--font-display);
  }

  .item-title {
    font-family: var(--font-body);
    font-size: var(--text-2xl);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-bg);
    margin-bottom: var(--space-sm);
  }

  .item-description {
    color: rgba(255, 255, 255, 0.9);
    font-size: var(--text-lg);
  }
</style>
