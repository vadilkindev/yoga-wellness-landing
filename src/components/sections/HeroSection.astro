---
import Container from '../layout/Container.astro';
import SectionWrapper from '../layout/SectionWrapper.astro';
import Button from '../ui/Button.astro';
---

<SectionWrapper id="hero" class="hero-section" bg="secondary">
  <div class="hero-bg">
    <!-- You can add a background image here -->
    <div class="overlay"></div>
  </div>
  
  <Container>
    <div class="hero-content">
      <span class="hero-subtitle">Glow within</span>
      <h1 class="hero-title">ZENTONINA</h1>
      <p class="hero-description">Yoga, Meditation and Life Coaching for a balanced life.</p>
      
      <div class="hero-actions">
        <Button href="#booking" size="lg">Book Now</Button>
      </div>

      <div class="hero-keywords">
        <span>Grow</span>
        <span class="dot">•</span>
        <span>Flow</span>
        <span class="dot">•</span>
        <span>Glow</span>
      </div>
    </div>
  </Container>
</SectionWrapper>

<style>
  .hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: var(--navbar-height);
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    /* Use a placeholder gradient or add an actual image URL */
    background: linear-gradient(135deg, var(--color-secondary) 0%, #e6e2f1 100%);
    background-size: cover;
    background-position: center;
    z-index: -1;
  }

  /* Example if you want an image:
  .hero-bg {
    background-image: url('/assets/hero-bg.jpg');
  }
  */

  .overlay {
    position: absolute;
    inset: 0;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(2px);
  }

  .hero-content {
    position: relative;
    text-align: center;
    max-width: 800px;
    margin-inline: auto;
    z-index: 1;
    animation: fadeIn 1s ease-out forwards;
  }

  .hero-subtitle {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-style: italic;
    color: var(--color-text-primary);
    margin-bottom: var(--space-sm);
  }

  .hero-title {
    font-size: clamp(3rem, 8vw, 6rem);
    letter-spacing: 0.2em;
    margin: 0;
    margin-bottom: var(--space-md);
    color: var(--color-primary-dark, var(--color-primary));
    text-shadow: 0 4px 12px rgba(255,255,255,0.8);
  }

  .hero-description {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }

  .hero-actions {
    margin-bottom: var(--space-3xl);
  }

  .hero-keywords {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-style: italic;
    color: var(--color-primary);
  }

  .dot {
    font-size: 0.5em;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
