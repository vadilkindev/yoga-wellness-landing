---
import Container from '../layout/Container.astro';
import SectionWrapper from '../layout/SectionWrapper.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import Button from '../ui/Button.astro';
import Input from '../ui/Input.astro';
---

<SectionWrapper id="booking" bg="muted">
  <Container>
    <div class="booking-container">
      <div class="booking-content">
        <SectionTitle 
          title="Reservá una Sesión" 
          subtitle="¿Lista para arrancar?"
        />
        <p class="booking-description">
          Ya sea que busques clases privadas, retiros o coaching personalizado, 
          encontremos el momento ideal para conectar. Llená el formulario acá abajo.
        </p>
      </div>

      <div class="booking-form-wrapper">
        <form class="booking-form" onsubmit="event.preventDefault();">
          <div class="form-row">
            <Input name="firstName" placeholder="Nombre" required />
            <Input name="lastName" placeholder="Apellido" required />
          </div>
          <Input type="email" name="email" placeholder="Correo Electrónico" required />
          <Input type="tel" name="phone" placeholder="Número de Celular" />
          
          <div class="select-wrapper">
            <select name="service" required class="select-input">
              <option value="" disabled selected>Seleccioná un Servicio</option>
              <option value="yoga-class">Clase de Yoga</option>
              <option value="yoga-retreat">Retiro de Yoga</option>
              <option value="meditation">Sesión de Meditación</option>
              <option value="coaching">Coaching Personal</option>
            </select>
          </div>
          
          <Button type="submit" size="lg" class="submit-btn">Solicitar Reserva</Button>
        </form>
      </div>
    </div>
  </Container>
</SectionWrapper>

<style>
  .booking-container {
    max-width: 800px;
    margin-inline: auto;
    background-color: var(--color-bg);
    border-radius: var(--radius-lg);
    box-shadow: var(--shadow-lg);
    overflow: hidden;
  }

  .booking-content {
    padding: var(--space-2xl) var(--space-xl) var(--space-lg);
    text-align: center;
    background-color: var(--color-primary);
    color: var(--color-bg);
  }

  /* Override SectionTitle colors for dark background */
  .booking-content :global(.subtitle) {
    color: rgba(255, 255, 255, 0.8);
  }
  .booking-content :global(.title) {
    color: var(--color-bg);
  }

  .booking-description {
    font-size: var(--text-lg);
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin-inline: auto;
  }

  .booking-form-wrapper {
    padding: var(--space-xl);
  }

  .booking-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  .form-row {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }

  @media (min-width: 640px) {
    .form-row {
      flex-direction: row;
    }
  }

  .select-wrapper {
    position: relative;
  }

  .select-input {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: var(--color-text-primary);
    appearance: none;
    cursor: pointer;
  }

  .select-input:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px rgba(168, 159, 223, 0.2);
  }

  .select-wrapper::after {
    content: '▼';
    font-size: 0.8em;
    position: absolute;
    right: var(--space-md);
    top: 50%;
    transform: translateY(-50%);
    pointer-events: none;
    color: var(--color-text-secondary);
  }

  .submit-btn {
    margin-top: var(--space-md);
  }
</style>
