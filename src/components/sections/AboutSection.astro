---
import Container from '../layout/Container.astro';
import SectionWrapper from '../layout/SectionWrapper.astro';
import SectionTitle from '../ui/SectionTitle.astro';
import Button from '../ui/Button.astro';
---

<SectionWrapper id="about" bg="muted">
  <Container>
    <div class="about-grid">
      <div class="about-image-wrapper">
        <!-- Placeholder for image -->
        <div class="image-placeholder">
          <span class="sr-only">Profile photo of the coach</span>
        </div>
        <div class="decorative-blob"></div>
      </div>
      
      <div class="about-content">
        <SectionTitle 
          title="Elevate Your Life" 
          subtitle="About Me"
          alignment="left"
        />
        
        <div class="prose">
          <p>
            Welcome to Zentonina. I am dedicated to helping you find balance, 
            strength, and peace through the transformative power of yoga and mindfulness.
          </p>
          <p>
            With years of experience in holistic wellness, my approach combines traditional 
            practices with modern understanding to support your journey towards a healthier, 
            more vibrant life.
          </p>
          <p>
            Whether you are just beginning or looking to deepen your practice, I am here 
            to guide and support you every step of the way.
          </p>
        </div>

        <div class="about-actions">
          <Button href="#contact" variant="primary">Get in Touch</Button>
          <Button href="#services" variant="ghost">View Services</Button>
        </div>
      </div>
    </div>
  </Container>
</SectionWrapper>

<style>
  .about-grid {
    display: grid;
    gap: var(--space-3xl);
    align-items: center;
  }

  @media (min-width: 1024px) {
    .about-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .about-image-wrapper {
    position: relative;
    width: 100%;
    aspect-ratio: 4/5;
    max-width: 500px;
    margin-inline: auto;
  }

  .image-placeholder {
    width: 100%;
    height: 100%;
    background-color: var(--color-border);
    border-radius: var(--radius-lg) var(--radius-full) var(--radius-lg) var(--radius-full);
    position: relative;
    z-index: 2;
    overflow: hidden;
  }

  /* Just for visual effect in absence of real image */
  .image-placeholder::after {
    content: '';
    position: absolute;
    inset: 0;
    background: linear-gradient(45deg, var(--color-secondary), var(--color-primary));
    opacity: 0.5;
  }

  .decorative-blob {
    position: absolute;
    top: -10%;
    right: -10%;
    width: 60%;
    height: 60%;
    background-color: var(--color-primary);
    border-radius: 50%;
    opacity: 0.1;
    z-index: 1;
    filter: blur(40px);
  }

  .prose {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-xl);
  }

  .prose p {
    margin-bottom: var(--space-md);
  }

  .about-actions {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-md);
  }
</style>
